<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dia"
        style="@style/txt_000_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Manager Administrator login"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            style="@style/txt_000_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Password :-"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edtPassword"
            style="@style/txt_000_14"
            android:padding="2dp"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@drawable/squere_wallet_balance"
            android:inputType="textPassword" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvWrongPassword"
        style="@style/txt_000_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Wrong Password..!"
        android:textColor="@color/md_red_600"
        android:textStyle="bold"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/squere_wallet_balance"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnSubmit"
            style="@style/txt_000_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="10dp"
            android:text="Submit"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>